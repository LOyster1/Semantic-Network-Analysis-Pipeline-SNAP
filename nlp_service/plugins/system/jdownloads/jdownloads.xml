<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
		<name>plg_system_jdownloads</name>
        <author>Arno Betz</author>
        <creationDate>2015-11-19</creationDate>
        <copyright>Copyright (C) 2007 - 2014 by Arno Betz</copyright>
        <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
        <authorEmail>info@jdownloads.com</authorEmail>
        <authorUrl>www.jdownloads.com</authorUrl>
        <version>3.2.41</version>
		<description>PLG_SYSTEM_JDOWNLOADS_PLUGIN_DESCRIPTION</description>
		<files>
			<filename plugin="jdownloads">jdownloads.php</filename>
			<filename>index.html</filename>
			<folder>language</folder>
		</files>
		<config>
			<fields name="params">
				<fieldset name="basic">
					<field name="use_hider" type="list" description="PLG_SYSTEM_JDOWNLOADS_USE_HIDER_DESC"  label="PLG_SYSTEM_JDOWNLOADS_USE_HIDER_LABEL" default="0">
						<option value="1">PLG_SYSTEM_JDOWNLOADS_YES</option>
						<option value="0">PLG_SYSTEM_JDOWNLOADS_NO</option>
					</field>
					<field name="reduce_log_data_sets_to" type="text" default="" label="PLG_SYSTEM_JDOWNLOADS_SET_MAX_LOGS_LABEL" description="PLG_SYSTEM_JDOWNLOADS_SET_MAX_LOGS_DESC"/>
                    <field name="note1" type="note" description="PLG_SYSTEM_JDOWNLOADS_CACHE_RULES_INFO" />
                    <field name="rules" type="textarea" cols="30" rows="10" default="option=com_jdownloads" label="PLG_SYSTEM_JDOWNLOADS_SET_CACHE_RULES_LABEL" description="PLG_SYSTEM_JDOWNLOADS_SET_CACHE_RULES_DESC"/>
                    <field name="enable_again_after_dispatch" type="radio" default="0" label="PLG_SYSTEM_JDOWNLOADS_REENABLE_CACHE_LABEL" description="PLG_SYSTEM_JDOWNLOADS_REENABLE_CACHE_DESC">
                        <option value="1">PLG_SYSTEM_JDOWNLOADS_YES</option>
                        <option value="0">PLG_SYSTEM_JDOWNLOADS_NO</option>
                    </field>                    
				</fieldset>			
			</fields>
	</config>	
</extension>