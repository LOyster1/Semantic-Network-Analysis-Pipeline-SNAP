<?xml version="1.0" ?>
<falang type="contentelement">
<name>jDownloads Templates</name>
<author>Arno Betz</author>
<copyright>www.jdownloads.com</copyright>
<version>3.2</version>
<description>Definition for the jDownloads component (series 3.2+) - Templates</description>
<reference>
    <table name="jdownloads_templates">
        <field type="referenceid" name="id" translate="0">ID</field>
        <field type="titletext" name="template_name" translate="0">Name</field>
        <field type="textarea" name="template_text" translate="1">Layout text</field>
        <field type="textarea" name="template_header_text" translate="1">Layout header text</field>
        <field type="textarea" name="template_subheader_text" translate="1">Layout subheader text</field>
        <field type="textarea" name="template_footer_text" translate="1">Layout footer text</field>
        <field type="textarea" name="template_before_text" translate="1">Text before</field>
        <field type="textarea" name="template_after_text" translate="1">Text after</field>
        <field type="textarea" name="note" translate="1">Notes</field>
    </table>
</reference>
</falang>
